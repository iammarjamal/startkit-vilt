{
    "servers": {
        "laravel-boost": {
            "command": "php",
            "args": [
                "artisan",
                "boost:mcp"
            ]
        },

        "Inertia.js Documentation": {
            "url": "https://inertiajs.com/docs/mcp",
            "type": "http"
        },

        "shadcn": {
            "command": "npx",
            "args": ["shadcn-vue@latest", "mcp"]
        },

        "motion": {
            "command": "npx -y motion-ai"
        },

        "nuxt-ui": {
            "type": "http",
            "url": "https://ui.nuxt.com/mcp"
        },

        "mdn-docs": {
            "command": "npx",
            "args": ["-y", "@modelcontextprotocol/server-brave-search"]
        },

        "tailwind-tools": {
            "command": "npx",
            "args": ["-y", "tailwindcss-mcp-server"]
        },

        "herd": {
            "command": "php",
            "args": [
                "/Applications/Herd.app/Contents/Resources/herd-mcp.phar"
            ],
            "env": {
                "SITE_PATH": "/Volumes/iammarjamal/Github/Packages/startkit-vilt/StartKitVue"
            }
        }
    }
}